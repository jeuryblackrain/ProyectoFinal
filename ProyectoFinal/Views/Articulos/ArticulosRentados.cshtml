@model IEnumerable<Mantenimiento.Models.Articulo>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Lista de Articulos Rentados</h2>

<div class="row">

   
    <div class="col-sm-10">
        <input id="buscar" type="text" name="serach" placeholder="Busqueda..." class="form-control" />
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Precio)
            </th>
          
            <th style="text-align:center">@Html.DisplayName("Acciones")</th>
        </tr>
    </thead>
    @Html.ValidationSummary()
    <tbody id="table_body">
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
             
                <td style="text-align:center">
                    @Html.ActionLink(" ", "Edit", new { id = item.ArticuloID }, htmlAttributes: new { @class = "btn glyphicon glyphicon-edit" })
              
                </td>
            </tr>
        }
    </tbody>
</table>



@section scripts
    {
    <script>
                $(document).ready(function () {
                    $("#buscar").on("keyup", function () {
                        var value = $(this).val().toLowerCase();
                        $("#table_body tr").filter(function () {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > 1)
                        });
                    });
                });
    </script>
}