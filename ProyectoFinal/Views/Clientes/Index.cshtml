@model IEnumerable<Mantenimiento.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Lista de Clientes</h2>

<div class="row">

    <div class="col-sm-2">
        <p>
            @Html.ActionLink("Registrar Nuevo  Cliente", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>
    <div class="col-sm-10">
        <input id="buscar" type="text" name="serach" placeholder="Busqueda..." class="form-control" />
    </div>
</div>

<table class="table table-hover">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Telefefono)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="text-align:center">Acciones</th>
    </tr>
    @Html.ValidationSummary()
    <tbody id="table_body">
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Telefefono)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink(" ", "Edit", new { id = item.IdCliente }, htmlAttributes: new { @class = "btn glyphicon glyphicon-edit" })
                    @Html.ActionLink(" ", "Details", new { id = item.IdCliente }, htmlAttributes: new { @class = "btn glyphicon glyphicon-file" })
                    @Html.ActionLink(" ", "Delete", new { id = item.IdCliente }, htmlAttributes: new { @class = "btn glyphicon glyphicon-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
    {
    <script>
                $(document).ready(function () {
                    $("#buscar").on("keyup", function () {
                        var value = $(this).val().toLowerCase();
                        $("#table_body tr").filter(function () {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > 1)
                        });
                    });
                });
    </script>
}